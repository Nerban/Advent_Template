<section data-background-image="images/art/art{{key}}.png" data-background-opacity="0.5">
    <div class="w-full bg-gray-900 bg-opacity-75">
        <h3>{{card.head}}</h3>

        <div id ="{{key + '-foc' + '_' + loop.index}}" scry="{{card.card.id}}" class="pb-1">
            <div class="r-stack mb-5 w-full mb-5  text-center">
                <small data-fragment-index="1" class="fragment fade-out">???</small>
                <small data-fragment-index="1" class="fragment fade-up"></small>
            </div>
                  
            <hr class="mx-5">

            <div class="r-stack my-5">
                <img data-fragment-index="1" class="fragment fade-out w-1/3 shadow-xl opacity-100 rounded-3xl"data-src="images/card_back.jpg">

                <div data-fragment-index="1" class="fragment fade-down m-auto">
                    <div class="FlipButton w-1/3 cursor-pointer drop-shadow-sm hover:text-blue-200 text-white text-md rounded-full z-10 font-bold px-2 absolute top-0 right-0" >
                        <h2 onclick="toggleImg('{{key + '-foc' + '_' + loop.index}}')">&#10227;</h2> 
                    </div>	
                   
                    <a class=" mx-auto grid place-items-center r-stack" target="_blank" href="#">
                        <div class=" {% if card.card.foil%}foil-image  {% endif %} w-1/2 h-full block rounded-3xl"></div>
                        <img class="card-image shadow-md w-1/2 opacity-100 rounded-3xl" data-src org="" trs="" onerror="populateFoilCard('{{key + '-foc' + '_' + loop.index}}')">
                    </a>
                </div>
            </div>
        </div>	

    </div>
</section>