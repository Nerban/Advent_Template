<!-- start page -->
<section data-background-image="images/theme.jpg" data-background-opacity="0.5">
    <h1 class="r-fit-text">Adventskalender</h1>
    <hr class="mx-5">
    <br>
    <div class="w-full h-full bg-opacity-25 rounded-md p-5 bg-gray-900 aspect-video grid grid-cols-6 grid-rows-4 gap-4">
        
        {% for key,value in packs %}
            <a href="#{{key}}"><div class="hover:bg-yellow-300 bg-blue-300 p-6 rounded-md">{{key}} </div></a>  
            {%else%}
            keine Daten  
        {% endfor %}
        {% for i in range(packs|length ,24) %}
            <a href="#"><div class="hover:bg-yellow-300 bg-blue-200 p-6 rounded-md">{{loop.index + packs|length}} </div></a>  
            {%else%}
            keine Daten  
        {% endfor %}
    </div>
</section>
